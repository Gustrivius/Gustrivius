<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">
    <!--    tools:context="com.example.gustrivius.playActivity"-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Score_text"
        android:textSize="20sp"
        android:textColor="@color/teal_700"
        android:layout_alignParentLeft="true"
        android:id="@+id/score_text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        android:textColor="@color/teal_700"
        android:layout_alignParentRight="true"
        android:id="@+id/score"
        />

    <ImageView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="55dp"
        android:src="@drawable/baseline_lightbulb_24" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="00:20"
        android:textSize="24sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/Question_text"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/score_text"
        android:padding="8dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/question_text"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_text"
        android:text="A"
        android:backgroundTint="#FFDAB9"
        android:textColor="#fff"
        android:padding="12dp"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false"
        android:id="@+id/choice_1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choice_1"
        android:text="B"
        android:backgroundTint="#E8BFA1"
        android:textColor="#fff"
        android:padding="12dp"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false"
        android:id="@+id/choice_2"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choice_2"
        android:text="C"
        android:backgroundTint="#D2B48C"
        android:textColor="#fff"
        android:padding="12dp"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false"
        android:id="@+id/choice_3"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choice_3"
        android:text="D"
        android:backgroundTint="#BC8F5F"
        android:textColor="#fff"
        android:padding="12dp"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false"
        android:id="@+id/choice_4"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choice_4"
        android:text="Chat"
        android:layout_alignParentRight="true"
        android:background="#00ffff"
        android:textColor="#fff"
        android:padding="8dp"
        android:layout_marginBottom="24dp"
        android:textAllCaps="false"
        android:id="@+id/chat_button"/>

    <Button
        android:id="@+id/quit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choice_4"
        android:text="Quit"
        android:backgroundTint="#FF0000"
        android:textColor="#fff"
        android:padding="12dp"
        android:textAllCaps="false"
        android:layout_marginTop="70dp"/>


    <!--<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/MenuButton"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/QABack"
            android:textSize="12dp"
            />

    </LinearLayout>-->

    <!--    Ctrl+/ (line comment) or Ctrl+shift+/ (block comment) -->

</RelativeLayout>