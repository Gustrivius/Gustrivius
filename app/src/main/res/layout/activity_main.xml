<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/QA_button"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/QA_button"
            android:textAllCaps="false"
            android:backgroundTint="#88BFD8"
            android:textColor="#fff"
            />

    </LinearLayout>

        <Button
            android:id="@+id/play_button"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="@string/play_button"
            />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Username_Box"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:backgroundTint="#555555"
        android:textColor="#fff"
        />
    <EditText
        android:id="@+id/usernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#CCCCCC"
        android:ems="10"
        android:inputType="text" >
        <requestFocus />
    </EditText>
    <Button
        android:id="@+id/username_button"
        android:layout_width="140dp"
        android:backgroundTint="#555555"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/Submit_Username"
        />

    <Button
        android:id="@+id/nightmode_button"
        android:layout_width="140dp"
        android:backgroundTint="#555555"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:text="@string/nightmode"
        />

</LinearLayout>