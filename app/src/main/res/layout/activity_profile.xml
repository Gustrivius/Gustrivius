<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    tools:context="com.example.gustrivius.profileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:paddingTop="15dp"
        android:orientation="vertical">


        <include
            android:id="@+id/included_prof_layout"
            layout="@layout/activity_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--<com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/img_angry_donald_duck" />

        <TextView
            android:id="@+id/username_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donald Duck"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>-->

        <include
            android:id="@+id/included_prof_pic"
            layout="@layout/activity_profilepicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Salmon"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_profile"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"/>

        <EditText
            android:id="@+id/first_name_entry"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Gus"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/DimGray"
            android:layout_marginStart="25dp"
            android:background="@color/white"
            app:boxBackgroundMode="none"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/DarkGray"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_profile"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"/>

        <EditText
            android:id="@+id/last_name_entry"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Trivia"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/DimGray"
            android:layout_marginStart="25dp"
            android:background="@color/white"
            app:boxBackgroundMode="none"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/DarkGray"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_profile"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"/>

        <EditText
            android:id="@+id/username_entry"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="IWinEveryTime"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/DimGray"
            android:layout_marginStart="25dp"
            android:background="@color/white"
            app:boxBackgroundMode="none"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/DarkGray"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_email"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"/>

        <EditText
            android:id="@+id/email_entry"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="gustrivia_user1@gustavus.edu"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/DimGray"
            android:layout_marginStart="25dp"
            android:background="@color/white"
            app:boxBackgroundMode="none"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/DarkGray"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="90dp">

        <TextView
            android:id="@+id/edit_button"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_btn"
            android:text="Edit Profile"
            android:gravity="center"
            android:padding="7dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/Salmon"
            app:drawableStartCompat="@drawable/ic_edit_pencil"
            android:paddingStart="10dp"/>

        <TextView
            android:id="@+id/prof_submit_button"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_btn"
            android:text="Submit"
            android:gravity="center"
            android:padding="7dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/Salmon"
            android:layout_marginTop="15dp"
            app:drawableStartCompat="@drawable/ic_lock"
            android:paddingStart="10dp"/>

        <!--<TextView
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_btn"
            android:text="Change Password"
            android:gravity="center"
            android:padding="7dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/Salmon"
            android:layout_marginTop="15dp"
            app:drawableStartCompat="@drawable/ic_lock"
            android:paddingStart="10dp"/>-->

    </LinearLayout>

</LinearLayout>